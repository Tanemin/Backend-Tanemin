extends base

block content 
  .col.bg-light
    .card.p-5.shadow.mt-5.me-5
      .row.mb-5
        .col 
          h1= `${title}`
        .col-2
          a.btn.btn-primary.w-100(href='/stores/add-store') Add
      .row
        table.table
          thead
            tr
              th(scope='col') #
              th(scope='col') Image
              th(scope='col') Store Name
              th(scope='col') Owner
              th(scope='col') Actions
          tbody
            each store, i in stores
              tr
                th(scope='row')= `${i + 1}`
                td
                  img.img-thumbnail(src=`/img/stores/${store.imageCover}` alt=`${store.storeName}` style='width: 100px; height: 100px ; object-fit: cover;' )
                td=`${store.storeName}`
                td=`${store.owner}`
                td
                  a.btn.btn-warning.me-1(href=`/stores/update/${store._id}`) Update
                  form#formDeleteStore(action=`/stores/delete/${store._id}`)
                    button#btnDeleteStore.btn.btn-danger.ms-1 Delete
  