extends base

block content 
  .col.bg-light.p-4
    .row.mb-5
      .col 
        h1= `${title}`
      .col-2
        a.btn.btn-primary.w-100(href='/stores/create') Add
    .row
      table.table
        thead
          tr
            th(scope='col') #
            th(scope='col') User
            th(scope='col') Plant
            th(scope='col') Ammount
        tbody
          each transaction, i in transactions
            tr
              th(scope='row')= `${i + 1}`
              td=`${transaction.user}`
              td=`${transaction.plant}`
              td=`${transaction.ammount}`
              td
                button.btn.btn-warning.me-1(type='button') Update

                button.btn.btn-danger.ms-1(type='button') Delete
